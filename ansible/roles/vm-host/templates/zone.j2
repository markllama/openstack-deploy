;
; A DNS Zone file
;   Generated by Jinja2
;
$ORIGIN {{ item.domain }}.
@ 3600 IN SOA {{ item.nameservers[0] }}.{{ item.domain }}. (
  {{ item.admin_email }}.
  {{ now(fmt="%Y%m%d00") }}
  3600
  600
  604800
  600
)
;
; Name server records
;
{% for ns in item.nameservers %}
  3600 IN NS {{ ns }}.{{ item.domain }}.
{% endfor %}

;
; Address records
;
{% for a in item.addresses %}
{{ a.name }} IN A {{ a.address }}
{% endfor %}

;
; data structure schema
;
; zones:
;   - domain: 
;     admin_email:
;     serial_number:
;     nameservers:
;       - <name0>
;       - <name1>
;     addresses:
;       - name: <hostname>
;         addresses: <dottedquad>
;   - domain ...
